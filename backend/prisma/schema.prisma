generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PaymentLog {
  id          String   @id @default(cuid())
  type        String   // incoming or outgoing
  paymentHash String?
  paymentId   String?
  amountSat   Int
  description String?
  status      String   // pending, completed, failed
  rawData     Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([paymentHash])
  @@index([createdAt])
}

model Invoice {
  id            String   @id @default(cuid())
  paymentHash   String   @unique
  serialized    String
  amountSat     Int?
  description   String?
  externalId    String?
  expirySeconds Int      @default(3600)
  isPaid        Boolean  @default(false)
  createdAt     DateTime @default(now())
  expiresAt     DateTime
  paidAt        DateTime?

  @@index([externalId])
  @@index([isPaid])
}

model Offer {
  id          String   @id @default(cuid())
  serialized  String
  amountSat   Int?
  description String?
  createdAt   DateTime @default(now())
}

model NodeInfo {
  id        String   @id @default("singleton")
  nodeId    String
  chain     String
  version   String?
  rawData   Json
  updatedAt DateTime @updatedAt
}

model Settings {
  id                 String   @id @default("singleton")
  passwordHash       String?  // bcrypt hash - null = no password required
  autoLockMinutes    Int      @default(0) // 0 = never auto-lock
  lockScreenBg       String   @default("storm-clouds") // lightning, thunder-flash, storm-clouds, electric-storm, night-lightning, sky-thunder
  torEnabled         Boolean  @default(false) // Tor SOCKS5 proxy enabled
  tailscaleEnabled   Boolean  @default(false) // Tailscale VPN enabled
  tailscaleAuthKey   String?  // Tailscale auth key (encrypted)
  tailscaleHostname  String?  // Machine name for Magic DNS
  tailscaleDnsName   String?  // Full Magic DNS name (e.g., phoenixd-dashboard.tailnet.ts.net)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  createdAt DateTime @default(now())
  lastUsed  DateTime @default(now())

  @@index([expiresAt])
}
