generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PaymentLog {
  id          String   @id @default(cuid())
  type        String   // incoming or outgoing
  paymentHash String?
  paymentId   String?
  amountSat   Int
  description String?
  status      String   // pending, completed, failed
  rawData     String   // JSON stored as string for SQLite compatibility
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([paymentHash])
  @@index([createdAt])
}

model Invoice {
  id            String   @id @default(cuid())
  paymentHash   String   @unique
  serialized    String
  amountSat     Int?
  description   String?
  externalId    String?
  expirySeconds Int      @default(3600)
  isPaid        Boolean  @default(false)
  createdAt     DateTime @default(now())
  expiresAt     DateTime
  paidAt        DateTime?

  @@index([externalId])
  @@index([isPaid])
}

model Offer {
  id          String   @id @default(cuid())
  serialized  String
  amountSat   Int?
  description String?
  createdAt   DateTime @default(now())
}

model NodeInfo {
  id        String   @id @default("singleton")
  nodeId    String
  chain     String
  version   String?
  rawData   String   // JSON stored as string for SQLite compatibility
  updatedAt DateTime @updatedAt
}

model Settings {
  id                 String   @id @default("singleton")
  passwordHash       String?  // bcrypt hash - null = no password required
  autoLockMinutes    Int      @default(0) // 0 = never auto-lock
  lockScreenBg       String   @default("storm-clouds") // lightning, thunder-flash, storm-clouds, electric-storm, night-lightning, sky-thunder
  torEnabled         Boolean  @default(false) // Tor SOCKS5 proxy enabled
  tailscaleEnabled   Boolean  @default(false) // Tailscale VPN enabled
  tailscaleAuthKey   String?  // Tailscale auth key (encrypted)
  tailscaleHostname  String?  // Machine name for Magic DNS
  tailscaleDnsName   String?  // Full Magic DNS name (e.g., phoenixd-dashboard.tailnet.ts.net)
  // Cloudflared settings
  cloudflaredEnabled Boolean  @default(false) // Cloudflare Tunnel enabled
  cloudflaredToken   String?  // Tunnel token from Cloudflare
  cloudflaredIngress String?  // JSON array stored as string for SQLite compatibility
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  createdAt DateTime @default(now())
  lastUsed  DateTime @default(now())

  @@index([expiresAt])
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  label     String?  // Optional label like "Personal", "Work", "Family"
  avatarUrl String?  // Optional avatar image URL
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  addresses ContactAddress[]
  payments  PaymentMetadata[]
  recurringPayments RecurringPayment[]

  @@index([name])
  @@index([label])
}

model ContactAddress {
  id        String   @id @default(cuid())
  contactId String
  contact   Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  address   String   // Lightning Address, Node ID, or BOLT12 offer
  type      String   // "lightning_address", "node_id", "bolt12_offer"
  isPrimary Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([contactId])
  @@index([address])
  @@index([type])
}

model PaymentCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String   @default("#6366f1") // Hex color
  icon      String?  // Lucide icon name
  createdAt DateTime @default(now())
  payments  PaymentMetadata[] @relation("PaymentCategories")
  recurringPayments RecurringPayment[]
}

model PaymentMetadata {
  id          String   @id @default(cuid())
  paymentHash String?  @unique // For incoming payments
  paymentId   String?  @unique // For outgoing payments
  note        String?
  contactId   String?
  contact     Contact?  @relation(fields: [contactId], references: [id])
  categories  PaymentCategory[] @relation("PaymentCategories")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([contactId])
}

model RecurringPayment {
  id          String   @id @default(cuid())
  contactId   String
  contact     Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  addressId   String   // ContactAddress ID to use
  amountSat   Int      // Amount in satoshis
  frequency   String   // "every_minute", "every_5_minutes", "every_15_minutes", "every_30_minutes", "hourly", "daily", "weekly", "monthly"
  dayOfWeek   Int?     // 0-6 for weekly (0=Sunday)
  dayOfMonth  Int?     // 1-31 for monthly
  timeOfDay   String   @default("09:00") // HH:mm format (UTC)
  note        String?  // Optional note for the payment
  categoryId  String?  // Optional category
  category    PaymentCategory? @relation(fields: [categoryId], references: [id])
  status      String   @default("active") // "active", "paused", "cancelled"
  nextRunAt   DateTime // Next scheduled execution
  lastRunAt   DateTime? // Last successful execution
  lastError   String?  // Last error message if failed
  totalPaid   Int      @default(0) // Total amount paid so far
  paymentCount Int     @default(0) // Number of successful payments
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  executions  RecurringPaymentExecution[]

  @@index([contactId])
  @@index([status])
  @@index([nextRunAt])
}

model RecurringPaymentExecution {
  id                 String   @id @default(cuid())
  recurringPaymentId String
  recurringPayment   RecurringPayment @relation(fields: [recurringPaymentId], references: [id], onDelete: Cascade)
  status             String   // "success", "failed", "pending"
  amountSat          Int
  paymentId          String?  // Outgoing payment ID if successful
  paymentHash        String?  // Payment hash if successful
  errorMessage       String?  // Error message if failed
  executedAt         DateTime @default(now())

  @@index([recurringPaymentId])
  @@index([executedAt])
}
