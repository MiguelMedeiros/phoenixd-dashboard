generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PaymentLog {
  id          String   @id @default(cuid())
  type        String   // incoming or outgoing
  paymentHash String?
  paymentId   String?
  amountSat   Int
  description String?
  status      String   // pending, completed, failed
  rawData     String   // JSON stored as string for SQLite compatibility
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([paymentHash])
  @@index([createdAt])
}

model Invoice {
  id            String   @id @default(cuid())
  paymentHash   String   @unique
  serialized    String
  amountSat     Int?
  description   String?
  externalId    String?
  expirySeconds Int      @default(3600)
  isPaid        Boolean  @default(false)
  createdAt     DateTime @default(now())
  expiresAt     DateTime
  paidAt        DateTime?

  @@index([externalId])
  @@index([isPaid])
}

model Offer {
  id          String   @id @default(cuid())
  serialized  String
  amountSat   Int?
  description String?
  createdAt   DateTime @default(now())
}

model NodeInfo {
  id        String   @id @default("singleton")
  nodeId    String
  chain     String
  version   String?
  rawData   String   // JSON stored as string for SQLite compatibility
  updatedAt DateTime @updatedAt
}

model Settings {
  id                 String   @id @default("singleton")
  passwordHash       String?  // bcrypt hash - null = no password required
  autoLockMinutes    Int      @default(0) // 0 = never auto-lock
  lockScreenBg       String   @default("storm-clouds") // lightning, thunder-flash, storm-clouds, electric-storm, night-lightning, sky-thunder
  torEnabled         Boolean  @default(false) // Tor SOCKS5 proxy enabled
  tailscaleEnabled   Boolean  @default(false) // Tailscale VPN enabled
  tailscaleAuthKey   String?  // Tailscale auth key (encrypted)
  tailscaleHostname  String?  // Machine name for Magic DNS
  tailscaleDnsName   String?  // Full Magic DNS name (e.g., phoenixd-dashboard.tailnet.ts.net)
  // Cloudflared settings
  cloudflaredEnabled Boolean  @default(false) // Cloudflare Tunnel enabled
  cloudflaredToken   String?  // Tunnel token from Cloudflare
  cloudflaredIngress String?  // JSON array stored as string for SQLite compatibility
  // External Phoenixd connection
  useExternalPhoenixd Boolean  @default(false) // Use external phoenixd instead of Docker
  phoenixdUrl         String?  // e.g., "http://192.168.1.100:9740"
  phoenixdPassword    String?  // API password for external phoenixd
  // Setup wizard
  setupCompleted     Boolean  @default(false) // Whether initial setup wizard has been completed
  setupProfile       String?  // "minimal", "full", "custom"
  defaultLocale      String   @default("en") // Default locale for the dashboard
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  createdAt DateTime @default(now())
  lastUsed  DateTime @default(now())

  @@index([expiresAt])
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  label     String?  // Optional label like "Personal", "Work", "Family"
  avatarUrl String?  // Optional avatar image URL
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  addresses ContactAddress[]
  payments  PaymentMetadata[]
  recurringPayments RecurringPayment[]

  @@index([name])
  @@index([label])
}

model ContactAddress {
  id        String   @id @default(cuid())
  contactId String
  contact   Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  address   String   // Lightning Address, Node ID, or BOLT12 offer
  type      String   // "lightning_address", "node_id", "bolt12_offer"
  isPrimary Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([contactId])
  @@index([address])
  @@index([type])
}

model PaymentCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String   @default("#6366f1") // Hex color
  icon      String?  // Lucide icon name
  createdAt DateTime @default(now())
  payments  PaymentCategoryOnPayment[]
  recurringPayments RecurringPayment[]
}

// Junction table for many-to-many relationship
model PaymentCategoryOnPayment {
  paymentMetadataId String
  paymentMetadata   PaymentMetadata @relation(fields: [paymentMetadataId], references: [id], onDelete: Cascade)
  categoryId        String
  category          PaymentCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  assignedAt        DateTime @default(now())

  @@id([paymentMetadataId, categoryId])
  @@index([paymentMetadataId])
  @@index([categoryId])
}

model PaymentMetadata {
  id          String   @id @default(cuid())
  paymentHash String?  @unique // For incoming payments
  paymentId   String?  @unique // For outgoing payments
  note        String?
  contactId   String?
  contact     Contact?  @relation(fields: [contactId], references: [id])
  categories  PaymentCategoryOnPayment[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([contactId])
}

model RecurringPayment {
  id           String   @id @default(cuid())
  contactId    String
  contact      Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  addressId    String   // ContactAddress ID to use
  connectionId String?  // PhoenixdConnection ID - which node executes this payment
  connection   PhoenixdConnection? @relation(fields: [connectionId], references: [id], onDelete: SetNull)
  amountSat    Int      // Amount in satoshis
  frequency    String   // "every_minute", "every_5_minutes", "every_15_minutes", "every_30_minutes", "hourly", "daily", "weekly", "monthly"
  dayOfWeek    Int?     // 0-6 for weekly (0=Sunday)
  dayOfMonth   Int?     // 1-31 for monthly
  timeOfDay    String   @default("09:00") // HH:mm format (UTC)
  note         String?  // Optional note for the payment
  categoryId   String?  // Optional category
  category     PaymentCategory? @relation(fields: [categoryId], references: [id])
  status       String   @default("active") // "active", "paused", "cancelled"
  nextRunAt    DateTime // Next scheduled execution
  lastRunAt    DateTime? // Last successful execution
  lastError    String?  // Last error message if failed
  totalPaid    Int      @default(0) // Total amount paid so far
  paymentCount Int      @default(0) // Number of successful payments
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  executions   RecurringPaymentExecution[]

  @@index([contactId])
  @@index([connectionId])
  @@index([status])
  @@index([nextRunAt])
}

model RecurringPaymentExecution {
  id                 String   @id @default(cuid())
  recurringPaymentId String
  recurringPayment   RecurringPayment @relation(fields: [recurringPaymentId], references: [id], onDelete: Cascade)
  status             String   // "success", "failed", "pending"
  amountSat          Int
  paymentId          String?  // Outgoing payment ID if successful
  paymentHash        String?  // Payment hash if successful
  errorMessage       String?  // Error message if failed
  executedAt         DateTime @default(now())

  @@index([recurringPaymentId])
  @@index([executedAt])
}

model PhoenixdConnection {
  id                String    @id @default(cuid())
  name              String                      // User-friendly name (e.g., "Docker Local", "Mainnet Server")
  url               String                      // e.g., "http://192.168.1.100:9740"
  password          String?                     // API password (stored securely)
  isDocker          Boolean   @default(false)   // True for the default Docker instance
  isActive          Boolean   @default(false)   // Currently active connection
  nodeId            String?                     // Cached nodeId after successful connection
  chain             String?                     // Cached chain (mainnet/testnet)
  lastConnectedAt   DateTime?                   // Last successful connection
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  recurringPayments RecurringPayment[]          // Payments tied to this connection

  @@index([isActive])
  @@index([isDocker])
}

// Apps System - Third-party integrations via Docker
model App {
  id                String    @id @default(cuid())
  name              String                      // Display name
  slug              String    @unique           // Unique identifier (e.g., "telegram-bot")
  description       String?
  icon              String?                     // Icon URL or emoji
  
  // Source
  sourceType        String                      // "docker_image", "github", "marketplace"
  sourceUrl         String                      // Docker image or GitHub repo URL
  version           String?                     // Version tag
  
  // Docker
  containerName     String?                     // Running container name
  containerStatus   String    @default("stopped") // running, stopped, error
  internalPort      Int       @default(3000)    // Port the app listens on inside container
  
  // Configuration
  envVars           String?                     // JSON: custom env vars for this app
  webhookEvents     String?                     // JSON array: ["payment_received", "payment_sent"]
  webhookSecret     String?                     // Secret for signing webhooks
  webhookPath       String    @default("/webhook") // Path to receive webhooks
  
  // API Access
  apiKey            String?   @unique           // API key for app to call backend
  apiPermissions    String?                     // JSON: ["read:payments", "write:invoices"]
  
  // Status
  isEnabled         Boolean   @default(true)
  lastHealthCheck   DateTime?
  healthStatus      String?                     // healthy, unhealthy, unknown
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  webhookLogs       AppWebhookLog[]
  
  @@index([slug])
  @@index([containerStatus])
  @@index([isEnabled])
}

model AppWebhookLog {
  id          String   @id @default(cuid())
  appId       String
  app         App      @relation(fields: [appId], references: [id], onDelete: Cascade)
  eventType   String                           // payment_received, payment_sent, etc
  payload     String                           // JSON payload sent
  statusCode  Int?                             // HTTP response code
  response    String?                          // Response body (truncated)
  success     Boolean
  latencyMs   Int?
  createdAt   DateTime @default(now())
  
  @@index([appId])
  @@index([eventType])
  @@index([createdAt])
}
