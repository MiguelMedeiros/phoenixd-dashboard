{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Phoenixd Dashboard",
  "version": "1.0.0",
  "identifier": "com.phoenixd.dashboard",
  "build": {
    "beforeBuildCommand": "chmod +x scripts/prepare-resources.sh && scripts/prepare-resources.sh"
  },
  "app": {
    "withGlobalTauri": false,
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../resources/*",
      "../resources/**/*"
    ],
    "category": "Finance",
    "shortDescription": "Lightning Network Node Management",
    "longDescription": "A comprehensive dashboard for managing your Phoenixd Lightning Network node.",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["libgtk-3-0", "libayatana-appindicator3-1"]
      },
      "rpm": {
        "depends": ["gtk3", "libayatana-appindicator-gtk3"]
      }
    }
  },
  "plugins": {}
}
