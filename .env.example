# Phoenixd Dashboard - Environment Variables
# Copy this file to .env and adjust as needed

# ===========================================
# Phoenixd Configuration
# ===========================================

# Network chain (leave empty for mainnet, set to 'testnet' for testnet)
# PHOENIXD_CHAIN=testnet

# Phoenixd HTTP password (extracted from phoenix.conf by setup.sh)
# This will be auto-populated when you run ./setup.sh
PHOENIXD_PASSWORD=

# ===========================================
# PostgreSQL Configuration
# ===========================================

POSTGRES_USER=phoenixd
POSTGRES_PASSWORD=phoenixd_secret
POSTGRES_DB=phoenixd_dashboard

# ===========================================
# Application Configuration
# ===========================================

NODE_ENV=development

# Frontend URLs (adjust for production)
NEXT_PUBLIC_API_URL=http://localhost:4001
NEXT_PUBLIC_WS_URL=ws://localhost:4001
